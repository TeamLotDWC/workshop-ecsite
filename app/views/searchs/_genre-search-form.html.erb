<div>
  <p class="text-center font-weight-bold">ジャンル検索</p>
  <% genres.each do |genre| %>
    <%= form_with(url:search_path, method: :get, local: true) do |f| %>
      <%= f.hidden_field :model, value: "Genre" %>
      <%= f.hidden_field :content, value: genre.id  %>

      <%= f.submit genre.name, class: "btn btn-block btn-secondary text-center my-2" %>
    <% end %>
  <% end %>
</div>