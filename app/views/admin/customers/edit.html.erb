<div class="container">
  <div class="row">
    <h3><%= @customer.family_name %><%= @customer.first_name %>さんの会員情報編集</h3>
    <div class="col-md-10 offset-md-1">
      <%= form_with(model:@customer, url:customers_path, local: true ,method: :patch) do |f| %>
      <table class='table'>
        <tr class="form-group">
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr class="form-group">
          <td><%= f.label :name, '氏名' %></td>
          <td><%= f.text_field :family_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr class="form-group">
          <td><%= f.label :name_kana, 'フリガナ' %></td>
          <td><%= f.text_field :family_name_kana %></td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr class="form-group">
          <td><%= f.label :zip_code, '郵便番号' %></td>
          <td><%= f.text_field :zip_code %></td>
        </tr>
        <tr class="form-group">
          <td><%= f.label :address, '住所' %></td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr class="form-group">
          <td><%= f.label :phone_number, '電話番号' %></td>
          <td><%= f.text_field :phone_number %></td>
        </tr>
        <tr class="form-group">
          <td><%= f.label :email, 'メールアドレス' %></td>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr class="form-group">
          <td><%= f.label :"会員ステータス" %></td>
          <td>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deletedd, "退会", {value: :true} %>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deletedd, "有効", {value: :false} %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit ' 変更を保存 ', class:'btn btn-success' %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>