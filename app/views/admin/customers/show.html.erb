<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h3><%= @customer.family_name %><%= @customer.first_name %>さんの会員詳細</h3>
      <table class='table' >
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.family_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.family_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.zip_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @customer.is_deleted %>
              退会
            <% else %>
              有効
            <% end %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to '編集する', edit_admin_customer_path(@customer), class: "btn btn-sm btn-success edit_admin_customer_#{@customer.id}" %></td>
          <td><%= link_to '注文履歴一覧を見る', admin_orders_path, class: "btn btn-sm btn-primary" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>