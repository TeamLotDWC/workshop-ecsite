<%= form_with(model: [ :admin, item], local:true) do |f| %>
  <%= render 'layouts/errors', obj: item %>

 <div class="form-group">
    <%= f.label :item_image, "商品画像" %>
    <%= f.attachment_field :item_image, class: "form-control-file" %>
  </div>
  <div class="form-group">
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :introduction, "商品説明" %>
    <%= f.text_area :introduction, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :genre_id, "ジャンル" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
  </div>
  <div class="form-group">
    <%= f.label :net_price, "税抜き価格" %>
    <%= f.text_field :net_price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :is_stocked, "販売中", value: true %>
    <%= f.radio_button :is_stocked, :true %>
    <%= f.label :is_stocked, "販売停止中", value: false %>
    <%= f.radio_button :is_stocked, :false %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>