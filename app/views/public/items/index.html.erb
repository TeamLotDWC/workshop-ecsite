<div class= "container">
  <div class= "row">
    <div class= 'col-2'>
      <p>ここにジャンル検索欄が入ります</p>
    </div>
    <div class= 'col-10'>
      <div class ="d-inline-flex flex-wrap">
        <% @items.each do |item| %>
          <div class= "item-box px-3 py-3">
            <div>
              <%= link_to item_path(item) do %>
                <%= attachment_image_tag(item, :item_image, :fill, 180, 180) %>
              <% end %>
            </div>
            <div><%= item.name %></div>
            <div><%= item.net_price.to_s(:delimited) %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>