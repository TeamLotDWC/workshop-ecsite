<div class= "container">
  <div class= "row">
    <div class= 'col-2'>
      <%= render 'searchs/genre-search-form', genres: @genres %>
    </div>
    <div class= 'col-10'>
      <div class="d-flex inline-block">
        <h3 class="font-weight-bold">商品一覧</h3>
        <h5 class="pt-2">(全<%= all_items.count %>件)</h5>
      </div>
      <div class ="d-inline-flex flex-wrap">
        <% items.each do |item| %>
          <div class= "px-3 py-3">
            <div>
              <%= link_to item_path(item) do %>
                <%= attachment_image_tag(item, :item_image, :fill, 180, 150) %>
              <% end %>
            </div>
            <div class="font-weight-bold my-2"><%= item.name %></div>
            <div class="font-weight-bold my-2">¥<%= item.net_price.to_s(:delimited) %></div>
          </div>
        <% end %>
      </div>
      <div class="py-2 d-flex align-items-center justify-content-center"><%= paginate items %></div>
    </div>
  </div>
</div>