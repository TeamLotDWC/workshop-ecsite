<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="offset-sm-1 " style="background-color: #eeeeee; display: inline-block; padding:0 20px; font-weight: bold; margin-top: 50px; margin-bottom: 50px;"> 新規会員登録 </h5>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="form-group" style="display: flex">
          <div class="col-sm-3">名前</div>
          <div class="col-sm-1">(姓)</div>
          <div class="col-sm-3"><%= f.text_field :family_name %></div>
          <div class="col-sm-1">(名)</div>
          <div class="col-sm-3"><%= f.text_field :first_name %></div>
        </div>
        <div class="form-group" style="display: flex">
          <div class="col-sm-3">フリガナ</div>
          <div class="col-sm-1">(セイ)</div>
          <div class="col-sm-3"><%= f.text_field :family_name_kana %></div>
          <div class="col-sm-1">(メイ)</div>
          <div class="col-sm-3"><%= f.text_field :first_name_kana %></div>
        </div>
        <div class="form-group" style="display: flex">
          <div class="col-sm-3"><%= f.label :email, "メールアドレス" %></div>
          <div class="col-sm-1"></div>
          <div class="col-sm-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
        </div>
        <div class="form-group" style="display: flex">
          <div class="col-sm-3"><%= f.label :zip_code, "郵便番号（ハイフンなし）" %></div>
          <div class="col-sm-1"></div>
          <div class="col-sm-3"><%= f.text_field :zip_code %></div>
        </div>
        <div class="form-group" style="display: flex">
          <div class="col-sm-3"><%= f.label :address, "住所" %></div>
          <div class="col-sm-1"></div>
          <div class="col-sm-7"><%= f.text_field :address, :size=>"63" %></div>
        </div>
        <div class="form-group" style="display: flex">
          <div class="col-sm-3"><%= f.label :phone_number, "電話番号（ハイフンなし）" %></div>
          <div class="col-sm-1"></div>
          <div class="col-sm-3"><%= f.text_field :phone_number %></div>
        </div>
        <div class="form-group" style="display: flex">
          <div class="col-sm-3">
            <%= f.label :password, "パスワード（6文字以上）" %>
          </div>
          <div class="col-sm-1"></div>
          <div class="col-sm-3"><%= f.password_field :password, autocomplete: "new-password" %></div>
        </div>
        <div class="form-group" style="display: flex">
          <div class="col-sm-3"><%= f.label :password_confirmation, "パスワード（確認用)" %></div>
          <div class="col-sm-1"></div>
          <div class="col-sm-3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
        </div>
        <div class="col-sm-3 offset-sm-4 actions"><%= f.submit "         新規登録         ", class: "btn btn-success" %></div>
      <% end %>
      <h5 class="offset-sm-1" style="background-color: #eeeeee; display: inline-block; padding:0 20px; font-weight: bold; margin-top: 50px;"> 既に登録済みの方 </h5>
      <div class="offset-sm-2" style="margin-bottom: 50px"><%= render "public/shared/links" %>からログインしてください</div>
    </div>
  </div>
</div>
