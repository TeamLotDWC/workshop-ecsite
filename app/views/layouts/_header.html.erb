              <li><%= link_to 'マイページ', customers_path, class: "btn btn-light mx-2" %></li>
              <li><%= link_to '商品一覧', items_path, class: "btn btn-light mx-2"%></li>
              <li><%= link_to 'カート', customers_cart_items_path, class: "btn btn-light mx-2" %></li>
              <li><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: "btn btn-light mx-2" %></li>
            <% else %>
              <li><%= link_to 'アバウト', about_path, class: "btn btn-light mx-2" %></li>
              <li><%= link_to '商品一覧', items_path, class: "btn btn-light mx-2" %></li>
